@model BloodBankSystem.Models.ViewModels.RecipientDashboardViewModel

@{
    ViewData["Title"] = "Recipient Dashboard";
}

<h2 class="mb-4"><i class="fas fa-user-circle text-primary"></i> @ViewData["Title"]</h2>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Welcome, <strong>@Model.RecipientName</strong>!</h4>
        <p class="card-text">
            <strong>Recipient ID:</strong> @Model.RecipientId<br />
            Below is your blood request history:
        </p>
        <a asp-action="MatchDonors" class="btn btn-outline-primary mt-3">
            <i class="fas fa-search"></i> Find Matching Donors
        </a>
    </div>
</div>

<div class="row mb-4 text-center">
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-list"></i> Total Requests</h5>
                <p class="card-text display-6">@Model.TotalRequests</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-dark bg-warning shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-hourglass-half"></i> Pending Requests</h5>
                <p class="card-text display-6">@Model.PendingRequests</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-check-circle"></i> Approved Requests</h5>
                <p class="card-text display-6">@Model.ApprovedRequests</p>
            </div>
        </div>
    </div>
</div>

@if (Model.RequestHistory != null && Model.RequestHistory.Any())
{
    <h4 class="mb-3"><i class="fas fa-history"></i> Blood Request History</h4>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Request Date</th>
                <th scope="col">Blood Group</th>
                <th scope="col">Units</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.RequestHistory)
            {
                <tr>
                    <td>@request.RequestDate.ToString("yyyy-MM-dd")</td>
                    <td>@request.BloodGroup</td>
                    <td>@(request.Quantity > 0 ? request.Quantity.ToString() : "N/A")</td>
                    <td>
                        <span class="badge @(request.Status == "Pending" ? "bg-warning text-dark" : "bg-success")">
                            @request.Status
                        </span>
                    </td>
                    <td>
                        <a asp-action="EditBloodRequest" asp-route-id="@request.Id" class="btn btn-sm btn-outline-primary me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteBloodRequest" asp-route-id="@request.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You have not made any blood requests yet.
    </div>
}

<div class="mt-4">
    <a asp-action="RequestBlood" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Request New Blood
    </a>
</div>
@section Scripts {
    @if (TempData["ToastMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                showToast("@TempData["ToastMessage"]".replace(/"/g, '&quot;'), 'success');
            });
        </script>
    }
}
