@{
    ViewData["Title"] = "Recipient Login";
    var emailValue = ViewData["Email"] as string ?? "";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error as string))
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="email">Email Address</label>
        <input name="email" id="email" class="form-control" type="email" value="@emailValue" required />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" id="password" class="form-control" type="password" required />
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-action="Register">Don't have an account? Register here</a>
</div>
