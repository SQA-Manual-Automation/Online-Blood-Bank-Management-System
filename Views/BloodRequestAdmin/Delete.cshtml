@model BloodBankSystem.Models.BloodRequest

@{
    ViewData["Title"] = "Delete Blood Request";
}

<h2>Delete Blood Request</h2>

<h4>Are you sure you want to delete this request?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Recipient</dt>
        <dd class="col-sm-10">@Model.Recipient?.FullName</dd>

        <dt class="col-sm-2">Blood Group</dt>
        <dd class="col-sm-10">@Model.BloodGroup</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Request Date</dt>
        <dd class="col-sm-10">@Model.RequestDate.ToShortDateString()</dd>
    </dl>

    <form asp-controller="BloodRequestAdmin" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="BloodRequestAdmin" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
