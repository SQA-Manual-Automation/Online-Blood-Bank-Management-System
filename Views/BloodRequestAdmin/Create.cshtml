@model BloodBankSystem.Models.BloodRequest

@{
    ViewData["Title"] = "Create Blood Request";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-controller="BloodRequestAdmin" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="RecipientId" class="form-label"></label>
        @if (ViewBag.RecipientId != null)
        {
            <select asp-for="RecipientId" class="form-control" asp-items="ViewBag.RecipientId">
                <option value="">-- Select Recipient --</option>
            </select>
        }
        else
        {
            <select asp-for="RecipientId" class="form-control">
                <option disabled selected>No recipients available</option>
            </select>
        }
        <span asp-validation-for="RecipientId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="BloodGroup" class="form-label"></label>
        <input asp-for="BloodGroup" class="form-control" placeholder="e.g. A+, B-, O+" />
        <span asp-validation-for="BloodGroup" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" placeholder="1â€“10 units" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" placeholder="Hospital or city name" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Message" class="form-label"></label>
        <textarea asp-for="Message" class="form-control" placeholder="Optional message for donor or admin"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RequestDate" class="form-label"></label>
        <input asp-for="RequestDate" class="form-control" type="date" />
        <span asp-validation-for="RequestDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
    <a class="btn btn-secondary ms-2" asp-controller="BloodRequestAdmin" asp-action="Index">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
