@model IEnumerable<BloodBankSystem.Models.Donor>

@{
    ViewData["Title"] = "Donor List";
}

<h2 class="text-center mt-4">Donor List</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        No donors found in the system.
    </div>
}
else
{
    <table class="table table-bordered table-striped mt-4">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Blood Group</th>
                <th>Contact Number</th>
                <th>Email</th>
                <th>Location</th>
                <th>Last Donation</th>
                <th>Eligible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model)
            {
                <tr>
                    <td>@donor.FullName</td>
                    <td>@donor.BloodGroup</td>
                    <td>@donor.ContactNumber</td>
                    <td>@(string.IsNullOrWhiteSpace(donor.Email) ? "N/A" : donor.Email)</td>
                    <td>@donor.Location</td>
                    <td>@(donor.LastDonationDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                    <td>@(donor.IsEligible ? "Yes" : "No")</td>
                    <td class="text-nowrap">
                        <a asp-controller="Donors" asp-action="Edit" asp-route-id="@donor.DonorId" class="btn btn-sm btn-warning me-1">Edit</a>

                        <form asp-controller="Donors" asp-action="DeleteConfirmed" asp-route-id="@donor.DonorId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this donor?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-4 text-end">
    <a asp-controller="Donors" asp-action="Create" class="btn btn-primary">Add New Donor</a>
</div>
