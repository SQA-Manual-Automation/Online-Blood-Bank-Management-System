@{
    ViewData["Title"] = "Donor Login";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">Donor Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Login" method="post" class="mx-auto" style="max-width: 500px;">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="email" class="form-control" value="@ViewData["Email"]" autocomplete="email" required />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" name="password" type="password" class="form-control" autocomplete="off" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
