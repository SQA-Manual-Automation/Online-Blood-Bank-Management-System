@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BloodBankSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BloodBankSystem.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BloodBankSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Recipients">Recipients</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Donors" asp-action="Index">Donors</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="BloodRequestAdmin" asp-action="Index">Blood Requests</a></li>
                        }

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Recipient" asp-action="Login">Recipient Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Recipient" asp-action="Register">Recipient Register</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Donors" asp-action="Login">Donor Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Donors" asp-action="Register">Donor Register</a></li>
                        }

                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BloodBankSystem - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <div aria-live="polite" aria-atomic="true"
         class="position-fixed bottom-0 end-0 p-3"
         style="z-index: 1080">
        <div id="toastContainer"></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.showToast = function (message, type = 'success') {
            const toastId = 'toast-' + Date.now();
            const textColor = (type === 'success' || type === 'info') ? 'text-dark' : 'text-white';
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center bg-${type} ${textColor} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>`;
            const container = document.getElementById('toastContainer');
            container.insertAdjacentHTML('beforeend', toastHtml);
            const toastEl = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastEl, { delay: 3500 });
            toast.show();
        };

        @if (TempData["ToastMessage"] != null)
        {
            <text>
                window.addEventListener('DOMContentLoaded', function () {
                    showToast("@TempData["ToastMessage"]".replace(/"/g, '&quot;'), 'success');
                });
            </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
